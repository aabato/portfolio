@import 'nib'

@keyframes FadeIn
	0%{
		opacity 0
	}
	100% {
		opacity 100
	}
@keyframes dropIn
	0%{
		opacity 0
		transform translateY(-10%)
	}
	100%{
		opacity 1
		transform translateY(0)
	}


html,body 
	height 100%
	width 100%
	margin 0
	padding 0

body
	background #9BB6B0

h1,h2,nav 
	margin 0
	padding 0

h1 
	font-family 'Lato', sans-serif
	font-weight 100
	font-size 60px
	text-align center
	animation FadeIn 2000ms ease-in

h2 
	font-family 'Lato', sans-serif
	font-weight 100
	font-size 30px
	text-align center
	padding-top 10px
	animation FadeIn 2000ms ease-in 3000ms
	animation-fill-mode both


.main
	display table
	width 100%
	height 100%

.main-wrapper
	display table-cell
	vertical-align middle

.main-wrapper nav 
	text-align center

.main-wrapper nav a 
	font-size 20px
	text-decoration none
	color #eee
	padding-top 60px
	for num in 1..5
		&:nth-child({num}n)
			animation dropIn 1000ms ease-in
			animation-delay num*500ms
			animation-fill-mode both

.main-wrapper nav ahover 
	color #fff

.main-wrapper nav a+a 
	padding-left 10px